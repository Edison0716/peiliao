<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#dcdcdc">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorMain">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="余额"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"/>


        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"

            android:background="#00000000"
            android:src="@drawable/icon_common_back1"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorTextWhite"
        android:id="@+id/rl_balanceDetails"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/MyItemStyle"
            android:text="现金收支明细"/>
        <TextView
            android:id="@+id/tv_userName"
            style="@style/textStyle"
            android:text=""
            />
        <ImageButton
            style="@style/MyIconLoadMore"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorTextWhite"
        android:id="@+id/rl_recharge"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/MyItemStyle"
            android:text="充值"/>
        <ImageButton
            style="@style/MyIconLoadMore"
            />
    </RelativeLayout>
    <View
        style="@style/PartingLine1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="0dp"></View>
    <RelativeLayout
        android:background="@color/colorTextWhite"
        android:id="@+id/rl_drawMoney"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/MyItemStyle"
            android:text="提现"/>
        <ImageButton
            style="@style/MyIconLoadMore"
            />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/colorTextWhite"
        android:id="@+id/rl_getMoneyRecord"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            style="@style/MyItemStyle"
            android:text="提现记录"/>
        <ImageButton
            style="@style/MyIconLoadMore"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorTextWhite"></RelativeLayout>
</LinearLayout>
