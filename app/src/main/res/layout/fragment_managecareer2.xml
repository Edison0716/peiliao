<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDivLine"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorMain">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="管理职业"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"/>


        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#00000000"
            android:src="@drawable/icon_common_back1"
            android:layout_alignParentLeft="true" />
        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/colorTextWhite"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/colorTextWhite">
        <TextView
            android:textColor="@color/colorBlack"
            style="@style/textStyle1"
            android:text="美食家"
            android:textSize="18sp"/>
        <ImageView
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_marginTop="43dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_qrzy_star"
            />
        <TextView
            style="@style/textStyle1"
            android:text="初级美食家"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"/>


        <TextView
            style="@style/textStyle1"
            android:text="距离"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"/>
        <ImageView
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="97dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_qrzy_star"
            />
        <TextView
            style="@style/textStyle1"
            android:text="中级美食家还差"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="60dp"
            android:textSize="14sp"/>
        <TextView
            style="@style/textStyle1"
            android:text="50"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="160dp"
            android:textSize="14sp"/>
        <TextView
            style="@style/textStyle1"
            android:text="经验值"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="180dp"
            android:textSize="14sp"/>
        <View
            style="@style/PartingLine1"
            android:layout_marginTop="130dp"></View>
        <TextView
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/font_size_14"
            android:layout_marginTop="145dp"
            style="@style/textStyle"
            android:text="升级说明"/>
        <ImageView
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_more"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
           android:layout_marginTop="7dp"
            style="@style/textStyle1"
            android:text="已设置为主营职业"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/font_size_12"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
</LinearLayout>
