<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorMain">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="订单详情"
                android:textColor="@color/colorTextWhite"
                android:textSize="18sp"/>


            <ImageButton
                android:id="@+id/ic_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="#00000000"
                android:src="@drawable/icon_common_back"/>

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_m">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/colorOrderStatusBackground">


                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/padding_m"
                            android:layout_marginTop="@dimen/padding_m"
                            android:text="订单状态："
                            android:textColor="@color/colorOrderStatusText"
                            android:textSize="@dimen/text_title"/>


                        <TextView
                            android:id="@+id/tv_order_status_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textView15"
                            android:layout_centerVertical="true"
                            android:text="卖家已成功接到了订单了，就等卖家服务。"
                            android:textColor="@color/colorOrderStatusDetailsText"
                            android:textSize="@dimen/text_content"/>

                        <TextView
                            android:id="@+id/tv_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/textView15"
                            android:layout_toEndOf="@+id/textView15"
                            android:text="已接单，等待服务"
                            android:textColor="@color/colorOrderStatusText"
                            android:textSize="@dimen/text_title"/>

                        <TextView
                            android:id="@+id/tv_order_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/tv_order_status_details"
                            android:layout_below="@+id/tv_order_status_details"
                            android:layout_marginTop="@dimen/padding_m"
                            android:text="7天12小时25分41秒"
                            android:textColor="@color/colorOrderStatusDetailsText"/>

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/tv_order_time"
                            android:layout_marginStart="@dimen/padding_m"
                            android:layout_toEndOf="@+id/tv_order_time"
                            android:text="后订单将自动完成"
                            android:textColor="@color/colorOrderStatusDetailsText"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp">


                        <com.wenmingkeji.peiliao.view.CircleImageView
                            android:id="@+id/icon_head"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:src="@drawable/icon_common_food"/>

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/padding_xl"
                            android:layout_marginTop="25dp"
                            android:layout_toRightOf="@+id/icon_head"
                            android:text="糊涂虫"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/text_title"/>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorDivLine"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:padding="@dimen/padding_l">

                        <ImageButton
                            android:id="@+id/imageButton2"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ad3"/>

                        <TextView
                            android:id="@+id/tv_order_item_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/padding_l"
                            android:layout_toEndOf="@+id/imageButton2"
                            android:text="定制生日蛋糕"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/text_title"/>

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/tv_order_item_title"
                            android:layout_alignTop="@+id/tv_service_stock"
                            android:text="@string/service_size"
                            android:textColor="@color/colorTextGray"/>

                        <TextView
                            android:id="@+id/tv_service_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/imageButton2"
                            android:layout_alignStart="@+id/textView17"
                            android:text="198 元"
                            android:textColor="@color/colorTextPrice"
                            android:textSize="@dimen/text_title"/>

                        <TextView
                            android:id="@+id/tv_service_stock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@+id/textView17"
                            android:text="个"/>

                        <TextView
                            android:id="@+id/tv_service_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:text="1"
                            android:textColor="@color/colorText"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/textView22"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/tv_service_num"
                            android:layout_toStartOf="@+id/tv_service_num"
                            android:text="×"
                            android:textColor="@color/colorText"
                            android:textSize="20sp"/>


                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDivLine"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="end|center">

                        <ImageButton
                            android:id="@+id/ibtn_refund"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:background="@color/colorAlpha"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_order_btn_refund_unselected"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDivLine"/>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">


                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="服务/产品总价"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/text_title"/>

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:text="198 元"
                            android:textColor="@color/colorText"
                            android:textSize="@dimen/text_title"
                            />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/colorDivLine"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:gravity="end|center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/order_sum"
                            android:textSize="@dimen/text_title"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="198.00 元"
                            android:textColor="@color/colorTextPrice"
                            android:textSize="@dimen/text_title"/>


                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/colorDivBackground">


                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_m"
                        android:text="@string/pay_type"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_title"/>

                    <TextView
                        android:id="@+id/tv_pay_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textView20"
                        android:text="支付宝"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_title"/>

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/padding_m"
                        android:text="198.00 元"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_title"/>
                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_m"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/colorDivBackground"
                    android:paddingBottom="@dimen/padding_m"
                    android:paddingTop="@dimen/padding_m">


                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="@dimen/padding_m"
                        android:text="@string/service_details"
                        android:textColor="@color/colorTextGray"
                        android:textSize="@dimen/text_title"/>

                    <TextView
                        android:id="@+id/text11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/padding_m"
                        android:text="@string/service_type"
                        android:textColor="@color/colorTextGray"/>

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/padding_m"
                        android:text="@string/service_content"
                        android:textColor="@color/colorTextGray"/>

                    <TextView
                        android:id="@+id/tv_service_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/text11"
                        android:text="产品"
                        android:textColor="@color/colorTextGray"/>

                    <TextView
                        android:id="@+id/tv_service_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView21"
                        android:layout_toEndOf="@+id/textView21"
                        android:text="定制生日蛋糕"
                        android:textColor="@color/colorTextGray"/>

                </RelativeLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="@color/colorDivBackground"
                    android:gravity="center|end">


                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="@dimen/padding_m"
                        android:background="@color/colorAlpha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_order_btn_delay_unselected"/>


                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="@dimen/padding_m"
                        android:background="@color/colorAlpha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_order_btn_add_unselected"/>


                    <ImageButton
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="@dimen/padding_m"
                        android:background="@color/colorAlpha"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_order_btn_finish_selected"/>
                    
                    
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>