<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">
    
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.wenmingkeji.peiliao.view.CircleImageView
            android:id="@+id/icon_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_common_food"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/icon_head"
            android:text="糊涂虫"
            android:textColor="@color/colorText"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_user_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="45dp"
            android:layout_toRightOf="@+id/icon_head"
            android:text="初级画师"
            android:textColor="#f46737"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/iv_level_img"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="46dp"
            android:layout_toRightOf="@+id/icon_head"
            android:src="@drawable/icon_common_assessment_selected"/>

        <ImageView
            android:id="@+id/iv_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/icon_common_follow"/>
        
        <TextView
            android:id="@+id/tv_fans_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="130dp"
            android:text="257"
            android:textColor="@color/colorText"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="95dp"
            android:text="粉丝"
            android:textColor="@color/colorText"
            android:textSize="14sp"/>
        
    </RelativeLayout>

   
    <LinearLayout
        android:id="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/iv_preview1"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ad1"/>
        
        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_preview2"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ad1"/>

        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"/>
        
        <ImageView
            android:id="@+id/iv_preview3"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ad1"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl1ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/ll">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:text="@string/ican"
            android:textColor="@color/colorTextGray"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_user_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView3"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/textView3"
            android:text="转手绘买一送一"
            android:textColor="@color/colorTextGray"
            android:textSize="14sp"/>


        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView

                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_14"
                    android:src="@drawable/icon_common_like"/>

                <TextView
                    android:id="@+id/tv_like_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="320"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_14"
                    android:src="@drawable/icon_common_comment_gray"/>

                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="320"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_14"
                    android:src="@drawable/icon_common_refer"/>

                <TextView
                    android:id="@+id/tv_refer_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="666"
                    android:textColor="@color/colorTextLightGray"
                    android:textSize="@dimen/text_small"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/lllll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl1ll"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service_details"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="start"
            android:maxLines="2"
            android:text="欢迎各位同学来选购"
            android:textColor="@color/colorTextGray"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivLine"/>
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lllll">

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[已售"
                android:textColor="@color/colorTextYellow"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_service_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="128"
                android:textColor="@color/colorTextYellow"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="]"
                android:textColor="@color/colorTextYellow"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/iv_comment_level"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_comment_level_3"/>

            <TextView
                android:id="@+id/tv_comment_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="10dp"
                android:text="3.8"
                android:textColor="@color/colorTextYellow"
                android:textSize="12sp"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_service_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:text="120元"
            android:textColor="@color/colorTextPrice"/>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/rll"
        android:background="@color/colorDivBackground"/>


</RelativeLayout>