<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.wenmingkeji.peiliao.activities.Main4ActivityFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorMain"
            android:padding="@dimen/padding_m">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/publish_service"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/text_large"/>


            <ImageButton
                android:id="@+id/ic_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:background="@color/colorAlpha"
                android:src="@drawable/icon_home_fh"/>

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/smallSpace"
                android:gravity="center"
                android:text="@string/finish"
                android:textColor="@color/colorTextWhite"/>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_l">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_release_lc3"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_m"
            android:text="@string/service_publish_3"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_go"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_s"
                android:src="@drawable/icon_release_service1"/>

            <ImageView
                android:id="@+id/iv_come"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_s"
                android:src="@drawable/icon_release_service2"/>

            <ImageView
                android:id="@+id/iv_online"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_s"
                android:src="@drawable/icon_release_service3"/>

            <ImageView
                android:id="@+id/iv_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_s"

                android:src="@drawable/icon_release_service4"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_choose_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:padding="@dimen/smallSpace">

            <TextView
                android:id="@+id/tv_choose_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/padding_m"
                android:text="@string/choose_service_time"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请设置"/>

            <ImageView
                android:id="@+id/iv_choose_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_m"
                android:src="@drawable/icon_common_arrow_right"/>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorDivLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_l"
            android:text="@string/choose_service_range"
            android:textColor="@color/colorText"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/padding_m">

            <TextView
                android:id="@+id/tv_range_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_service_range"
                android:gravity="center"
                android:padding="@dimen/padding_l"
                android:text="@string/limit_range"
                android:textColor="@drawable/text_service_range"
                android:textSize="@dimen/text_content"/>

            <TextView

                android:layout_width="@dimen/padding_m"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/tv_range_anywhere"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_service_range"
                android:gravity="center"
                android:padding="@dimen/padding_l"
                android:text="@string/unlimit_range"
                android:textColor="@drawable/text_service_range"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
