<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/padding_l">


    <TextView
        android:id="@+id/tv_time_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_xxxq_time"
        android:gravity="center"
        android:text="@string/chat_msg_time"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_xxl">

        <com.wenmingkeji.peiliao.view.CircleImageView
            android:id="@+id/icon_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_common_food"/>

        <LinearLayout
            android:id="@+id/left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/padding_l"
            android:background="@drawable/bg_msg_received"
            android:padding="@dimen/padding_m">

            <TextView
                android:id="@+id/tv_msg_received"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:text="@string/msg_demo"
                android:textSize="@dimen/text_title"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>