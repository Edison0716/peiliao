<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextLightGray"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorMain"
        android:padding="@dimen/padding_m">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="绑定芝麻信用"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/text_large"/>
        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/colorAlpha"
            android:src="@drawable/icon_common_back"/>

    </RelativeLayout>
    <TextView
        android:gravity="center"
        android:background="@color/colorTextLightGray"
        android:text="您的账户未绑定芝麻信用"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <RelativeLayout
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <ImageButton
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/icon_withdrawal_zmxy"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            style="@style/textStyle1"
            android:layout_marginTop="300dp"
            android:text="3、绑定芝麻信用后可提现，并让账户更安全；"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            style="@style/textStyle1"
            android:layout_marginTop="270dp"
            android:text="2、用户看到芝麻信用分后会对你更加信任；"/>
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="20dp"
            style="@style/textStyle1"
            android:layout_marginTop="240dp"
            android:text="1、绑定芝麻信用后可提现，并让账户更安全；"/>
    </RelativeLayout>
<RelativeLayout
    android:background="#f1f1f1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/bt_immediateBind"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="立即绑定"
        android:background="@color/colorRed"
        android:textColor="@color/colorTextWhite"
        />
</RelativeLayout>

</LinearLayout>
