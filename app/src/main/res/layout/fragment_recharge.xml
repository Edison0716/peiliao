<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorMain">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="余额充值"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"/>


        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#00000000"
            android:src="@drawable/icon_common_back1"
            android:layout_alignParentLeft="true" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/textStyle1"
            android:text="现金余额（元）："/>
        <TextView
            android:textColor="@color/colorRed"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="150dp"
            style="@style/textStyle1"
            android:text="￥0.00" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10dp"
            style="@style/textStyle1"
            android:text="充值金额（元）："/>
        <EditText
            android:layout_width="200dp"
            android:inputType="number"
            android:id="@+id/rechargeCount"
            android:textColor="@color/colorRed"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:layout_marginLeft="150dp"
            style="@style/textStyle1"
            android:text="￥0.00" />
        <View
            style="@style/PartingLine"
            android:layout_marginTop="45dp"></View>

    </RelativeLayout>
    <TableLayout
        android:padding="10dp"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:padding="5dp">
            <Button
                android:id="@+id/recharge20"
                android:background="@drawable/recharge_bg_selector"
                android:text="20元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/recharge50"
                android:background="@drawable/recharge_bg_selector"
                android:text="50元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/recharge100"
                android:background="@drawable/recharge_bg_selector"
                android:text="100元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/recharge300"
                android:background="@drawable/recharge_bg_selector"
                android:text="300元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
        <TableRow
            android:padding="5dp">
            <Button
                android:id="@+id/recharge500"
                android:background="@drawable/recharge_bg_selector"
                android:text="500元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/recharge1000"
                android:background="@drawable/recharge_bg_selector"
                android:text="1000元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/recharge3000"
                android:background="@drawable/recharge_bg_selector"
                android:text="3000元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/user_define"
                android:background="@drawable/recharge_bg_selector"
                android:text="自定义"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>
    <RelativeLayout
        android:id="@+id/usingAlipay"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerVertical="true"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_balance_alipay"/>
        <TextView
            style="@style/textStyle1"
            android:text="支付宝支付"
            android:layout_marginLeft="100dp"/>
        <TextView
            style="@style/textStyle1"
            android:textSize="@dimen/dp_14"
            android:text="推荐有支付宝的用户使用"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            />
        <com.wenmingkeji.peiliao.view.SmoothCheckBox
            android:id="@+id/scb"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />

    </RelativeLayout>
    <View
        android:layout_marginTop="0dp"
        style="@style/PartingLine"></View>
    <RelativeLayout
        android:id="@+id/usingWechat"
        android:padding="5dp"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:layout_marginLeft="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/icon_balance_weixin"/>
        <TextView

            style="@style/textStyle1"
            android:text="微信支付"
            android:layout_marginLeft="100dp"/>
        <TextView
            style="@style/textStyle1"
            android:textSize="@dimen/dp_14"
            android:text="推荐有微信的用户使用"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            />
        <com.wenmingkeji.peiliao.view.SmoothCheckBox
            android:clickable="false"
            android:id="@+id/scb1"
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <TextView
        style="@style/textStyle1"
        android:textSize="12dp"
        android:text="您正在使用本平台进行交易，付款后资金暂由本平台保管"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <Button
        android:id="@+id/bt_confirm"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorTextWhite"
        android:background="@color/colorRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"/>
    </RelativeLayout>

</LinearLayout>
