<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:background="@color/colorMain"
            android:layout_width="match_parent"
            android:layout_height="60dp">


            <TextView
                android:text="支付订单"
                android:textSize="18sp"
                android:textColor="@color/colorTextWhite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <ImageButton
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="#00000000"
                android:id="@+id/ic_back"
                android:src="@drawable/icon_common_back"

                android:layout_width="40dp"
                android:layout_height="40dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单名称："
                android:id="@+id/textView6"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_title"
                android:layout_marginStart="@dimen/padding_l"
                android:layout_marginTop="@dimen/padding_l"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定制生日蛋糕"
                android:id="@+id/textView9"
                android:layout_alignTop="@+id/textView6"
                android:layout_toEndOf="@+id/textView6"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额："
                android:id="@+id/textView8"
                android:layout_below="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_title"
                android:layout_marginTop="@dimen/padding_m"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="198 元"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView6"
                android:layout_toEndOf="@+id/textView8"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_title"
                android:layout_marginTop="@dimen/padding_m"/>
            


            <TextView
                android:layout_alignParentBottom="true"
                android:background="@color/colorDivBackground"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_pay_zfb"
                android:layout_marginLeft="@dimen/padding_m"
                android:id="@+id/imageView4"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:background="@color/colorDivBackground"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝支付"
                android:id="@+id/textView12"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView4"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_title"
                android:layout_marginTop="@dimen/padding_l"
                android:layout_marginStart="@dimen/padding_l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡，信用卡都可以使用哦"
                android:id="@+id/textView13"
                android:layout_below="@+id/textView12"
                android:layout_alignStart="@+id/textView12"
                android:textColor="@color/colorTextGray"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_pay_zfb"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/padding_l"
                android:src="@drawable/icon_pay_selected"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/icon_pay_wx"
                android:layout_marginLeft="@dimen/padding_m"
                android:id="@+id/imageView5"/>

            <TextView
                android:layout_alignParentBottom="true"
                android:background="@color/colorDivLine"
                android:layout_width="match_parent"
                android:layout_height="1px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信钱包支付"
                android:id="@+id/textView123"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView5"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_title"
                android:layout_marginTop="@dimen/padding_l"
                android:layout_marginStart="@dimen/padding_l"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡，信用卡都可以使用哦"
                android:id="@+id/textView131"
                android:layout_below="@+id/textView123"
                android:layout_alignStart="@+id/textView123"
                android:textColor="@color/colorTextGray"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv_pay_wx"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/padding_l"
                android:src="@drawable/icon_pay_unselected"/>

        </RelativeLayout>
        
    </LinearLayout>


    
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="65dp">
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="2"
                android:background="@color/colorDivBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付金额："
                    android:id="@+id/textView14"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/text_title"
                    android:layout_marginStart="@dimen/padding_l"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="198"
                    android:id="@+id/tv_service_price"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextPrice"
                    android:textSize="@dimen/text_title"
                    android:layout_marginStart="@dimen/padding_s"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:id="@+id/textView151"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorTextPrice"
                    android:textSize="@dimen/text_title"
                    android:layout_marginStart="@dimen/padding_s"/>

               
            </LinearLayout>
            
            
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageButton
                    android:src="@drawable/icon_pay_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorAlpha"
                    android:id="@+id/imageButton"/>
                
            </LinearLayout>

            
        </LinearLayout>
        
        
        
    </RelativeLayout>
    
    
    
    
    

</RelativeLayout>