<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorMain"
        android:padding="@dimen/padding_m">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="企业认证"
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/text_large"/>
        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/colorAlpha"
            android:src="@drawable/icon_common_back"/>

    </RelativeLayout>
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            style="@style/textStyle1"
            android:text="企业名称："/>
        <EditText
            android:hint="请输入企业名称~"
            android:layout_weight="25"
            android:layout_width="0dp"
            android:background="@null"
            android:textColor="@color/colorRed"
            style="@style/textStyle1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            style="@style/textStyle1"
            android:text="营业执照："/>
        <EditText
            android:hint="请输入营业执照号~"
            android:layout_weight="25"
            android:layout_width="0dp"
            android:background="@null"
            android:textColor="@color/colorRed"
            style="@style/textStyle1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            style="@style/textStyle1"
            android:text="添加营业执照照片"/>
        <TextView
            android:textColor="@color/colorMain"
            android:layout_marginTop="10dp"
            style="@style/textStyle1"
            android:text="查看示例照片"/>
    </LinearLayout>
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/colorTextWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/ib_takePhoto"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/icon_about_tjzp"
            />
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_show"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />


    </RelativeLayout>
    <RelativeLayout
        android:background="#f1f1f1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_immediateBind"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="立即绑定"
            android:background="@color/colorRed"
            android:textColor="@color/colorTextWhite"
            />
    </RelativeLayout>
</LinearLayout>
