<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:Android="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorMain">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="头衔认证"
                    android:textColor="@color/colorTextWhite"
                    android:textSize="18sp"/>


                <ImageButton
                    android:id="@+id/ic_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"

                    android:background="#00000000"
                    android:src="@drawable/icon_common_back1"
                    android:layout_alignParentLeft="true" />

            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textStyle1"
                    android:text="真实姓名:"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlack"/>
                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textStyle1"
                    android:text="社会头衔:"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlack"/>
                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/textStyle1"
                    android:text="附加说明:"
                    android:textSize="15dp"
                    android:textColor="@color/colorBlack"/>
                <EditText
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    style="@style/textStyle1"
                    android:textSize="13dp"
                    android:textColor="@color/colorDockSelected"
                    android:text="请上传一张[工牌或名片或工作证]的正面照，以及至少一张手持照"/>
                <ImageButton
                    android:id="@+id/ib_takePhoto1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon_about_tjzp"/>
                <ImageView

                    android:id="@+id/iv_show1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    style="@style/textStyle1"
                    android:textSize="13dp"
                    android:textColor="@color/colorBlack"
                    android:text="材料反面照"/>
                <ImageButton
                    android:id="@+id/ib_takePhoto2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon_about_tjzp"/>
                <ImageView
                    android:id="@+id/iv_show2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
                <TextView
                    style="@style/textStyle1"
                    android:textSize="13dp"
                    android:textColor="@color/colorBlack"
                    android:text="手持材料照"/>
                <ImageButton
                    android:id="@+id/ib_takePhoto3"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/icon_about_tjzp"/>
                <ImageView
                    android:id="@+id/iv_show3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
            </RelativeLayout>
            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="提交"
                android:background="@color/colorDotSelected"
                android:textColor="@color/colorTextWhite"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
