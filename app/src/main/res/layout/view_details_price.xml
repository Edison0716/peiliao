<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">


        <TextView
            android:layout_marginTop="@dimen/padding_m"
            android:text="定制手工生日蛋糕，各种尺寸"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_title"
            android:id="@+id/tv_skills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_m"/>

        <ImageView
            android:layout_below="@id/tv_skills"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_comment_level_3"
            android:id="@+id/iv_comment_level"
            android:layout_marginTop="@dimen/padding_s"
            android:scaleType="fitCenter"
            android:layout_width="70dp"
            android:layout_height="20dp"/>

        <TextView
            android:textColor="@color/colorTextYellow"
            android:layout_below="@+id/tv_skills"
            android:layout_toRightOf="@+id/iv_comment_level"
            android:layout_marginTop="8dp"
            android:id="@+id/tv_comment_level_text"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="10dp"
            android:text="3.8"
            android:textSize="@dimen/text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <TextView
            android:id="@+id/tv_service_price"
            android:layout_marginLeft="150dp"
            android:textColor="@color/colorTextPrice"
            android:text="120元"
            android:textSize="@dimen/text_title"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/padding_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/tv_num_appointment"
            android:layout_below="@+id/iv_comment_level"
            android:layout_alignStart="@+id/iv_comment_level"
            android:layout_marginTop="@dimen/padding_m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人已约单"
            android:layout_below="@+id/iv_comment_level"
            android:layout_toStartOf="@+id/tv_comment_level_text"
            android:layout_marginTop="@dimen/padding_m"/>

        <TextView
            android:layout_alignParentBottom="true"
            android:background="@color/colorDivLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/textView4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存"
            android:id="@+id/tv1"
            android:layout_below="@+id/tv_comment_level_text"
            android:layout_alignStart="@+id/tv_comment_level_text"
            android:layout_marginLeft="@dimen/padding_xl"
            android:layout_marginTop="@dimen/padding_m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:id="@+id/tv_num_stock"
            android:layout_marginLeft="@dimen/padding_s"
            android:layout_alignTop="@+id/tv1"
            android:layout_toEndOf="@+id/tv1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定制手工生日单号"
            android:id="@+id/tv_service_introduce"
            android:layout_below="@+id/tv_num_appointment"
            android:layout_marginTop="@dimen/padding_m"
            android:textSize="@dimen/text_title"
            android:layout_marginStart="@dimen/padding_m"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/icon_details_unit_up"
            android:layout_marginEnd="@dimen/padding_m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单位"
            android:id="@+id/textView"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_title"
            android:layout_marginStart="@dimen/padding_m"/>





    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorDivBackground">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务方式："
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/text_title"
            android:layout_marginStart="@dimen/padding_m"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮寄"
            android:id="@+id/text11"
            android:layout_alignTop="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginStart="@dimen/padding_s"
            android:textSize="@dimen/text_title"/>
    </RelativeLayout>


</LinearLayout>