<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_m"
            android:text="@string/his_career"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_title"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_service_career"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_m"
        android:background="@color/colorDivBackground"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="@dimen/padding_m">


        <com.wenmingkeji.peiliao.view.CircleImageView
            android:id="@+id/img_servcie_preview"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_common_food"/>

        <TextView
            android:id="@+id/tv_service_name"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tv_price"
            android:text="写真拍摄"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_content"/>


        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTextWhite"/>

        <ImageView
            android:id="@+id/iv_level"
            android:layout_width="70dp"
            android:layout_height="15dp"
            android:layout_alignStart="@+id/tv_service_name"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_comment_level_4"/>

        <TextView
            android:id="@+id/tv_level_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_level"
            android:layout_marginStart="@dimen/smallSpace"
            android:layout_toEndOf="@+id/iv_level"
            android:text="4.0"
            android:textColor="@color/colorMain"
            android:textSize="@dimen/text_tip"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/padding_m"
            android:layout_toEndOf="@+id/img_servcie_preview"
            android:text="600 元"
            android:textColor="@color/colorTextPrice"/>

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView44"
            android:layout_marginStart="@dimen/smallSpace"
            android:layout_toEndOf="@+id/tv_price"
            android:text="( "/>

        <TextView
            android:id="@+id/tv_person_appointment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView48"
            android:layout_toEndOf="@+id/textView48"
            android:text="6"/>

        <TextView
            android:id="@+id/textView50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView44"
            android:layout_toEndOf="@+id/tv_person_appointment"
            android:text=" 人约单）"/>

        <TextView
            android:id="@+id/tv_service_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView44"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_niurenzy_btn"
            android:gravity="center"
            android:padding="@dimen/padding_m"
            android:text="全部6个服务"
            android:textColor="@color/colorTextWhite"/>

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_m"
        android:background="@color/colorDivBackground"/>

</LinearLayout>