<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorTextWhite"
    >
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorMain">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:background="@color/colorTextWhite"
                android:id="@+id/ll_headButton"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_headImage"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitXY"
                       />

                    <ImageView
                        android:id="@+id/icon_sex"
                        android:layout_width="20dip"
                        android:layout_height="20dip"
                        android:layout_gravity="bottom|right"
                         />
                </FrameLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text=""
                        android:textSize="16dp"
                        android:textColor="@color/colorBlack"></TextView>
            <RelativeLayout
                    android:id="@+id/rl_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="芝麻信用 "
                        android:textColor="@color/colorTextBlue"
                        android:textSize="@dimen/font_size_12" />
                <TextView
                    android:id="@+id/whetherBind"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:text=""
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/font_size_12" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="余额："
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/font_size_12" />
                    <TextView
                        android:id="@+id/tv_balance"
                        android:layout_marginTop="30dp"
                        style="@style/textStyle1"
                        android:textSize="12dp"
                        android:textColor="@color/colorAccent"
                        android:text=""/>
            </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_perfectDegree"
                    android:clickable="true"
                    android:gravity="center"
                    android:background="@drawable/bg_me_wsd"
                    android:textColor="@color/colorMain"
                    android:layout_marginTop="40dp"
                    android:textSize="12dp"
                    android:layout_marginLeft="35dp"
                    android:layout_width="75dp"
                    android:layout_height="25dp"
                    android:text="完善度 50%"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/icon_more" />

            </LinearLayout>

            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"/>

            <RelativeLayout
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="我的订单"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/tv_showAllGoods"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:text="查看全部订单"
                    android:textSize="@dimen/font_size_10" />
               <ImageButton
               style="@style/MyIconLoadMore"
                />

            </RelativeLayout>

            <View
                style="@style/PartingLine1"
                ></View>












<TableLayout
    android:background="@color/colorTextWhite"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity=""
    >
    <TableRow>
        <RelativeLayout
            android:id="@+id/rl_waitPay"
            android:layout_marginLeft="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_me_dzf"
                />
            <TextView
                style="@style/textStyle1"
                android:text="待支付"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_12"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_waitTakingOrder"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_me_djd"
                />
            <TextView
                style="@style/textStyle1"
                android:text="待接单"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_12"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/waitEnsure"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_me_dqr"
                />
            <TextView
                style="@style/textStyle1"
                android:text="待确认"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/font_size_12"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_waitAssess"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_me_dpj"
                />
            <TextView
                style="@style/textStyle1"
                android:text="待评价"
                android:layout_marginLeft="12dp"
                android:textSize="@dimen/font_size_12"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_waitRefund"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleX="0.8"
                android:scaleY="0.8"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_me_tkz"
                />
            <TextView
                style="@style/textStyle1"
                android:text="退款中"
                android:layout_marginLeft="12dp"
                android:textSize="@dimen/font_size_12"
                android:layout_marginTop="40dp"/>

        </RelativeLayout>
    </TableRow>




</TableLayout>






            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
<LinearLayout
    android:background="@color/colorTextWhite"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_horizontal"
        android:id="@+id/ll_collect"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="8dp"
