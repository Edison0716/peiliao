    </LinearLayout>
</LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <RelativeLayout
                android:background="@color/colorTextWhite"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_12"
                    android:text="我是服务者"/>

            </RelativeLayout>
            <View
                style="@style/PartingLine1"
                ></View>
            <TableLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <LinearLayout
                        android:id="@+id/ll_hadSell"
                        android:layout_marginLeft="25dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_me_ysdd"/>
                        <TextView
                            style="@style/textStyle1"
                            android:textSize="@dimen/dp_14"
                            android:text="已售订单"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_publicService"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_me_fbfw"/>
                        <TextView
                            style="@style/textStyle1"
                            android:textSize="@dimen/dp_14"
                            android:text="发布服务"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_manageService"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_me_glfw"/>
                        <TextView
                            style="@style/textStyle1"
                            android:textSize="@dimen/dp_14"
                            android:layout_marginLeft="12dp"
                            android:text="管理服务"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_manageCareer"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginLeft="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_me_glzy"/>
                        <TextView
                            style="@style/textStyle1"
                            android:layout_marginLeft="13dp"
                            android:textSize="@dimen/dp_14"
                            android:text="管理职业"/>
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorTextWhite"
                android:id="@+id/ll_identify"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_me_grrz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="个人认证" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/div_line"></View>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorTextWhite"
                android:id="@+id/ll_dataComplete"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_me_zlwsd" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="资料完善度" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/div_line"></View>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_me_headphones" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="联系客服" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/div_line"></View>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorTextWhite"
                android:id="@+id/ll_hotLine"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_me_tel" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="客服热线" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/div_line"></View>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorTextWhite"
                android:id="@+id/ll_feedback"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_me_wtfk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="问题反馈" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/div_line"></View>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:background="@color/colorTextWhite"
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/icon_me_setting" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="设置" />

            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/div_line"></View>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
