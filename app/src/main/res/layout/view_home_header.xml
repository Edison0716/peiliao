<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/view_home_header"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_home_ad_banner"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

        <LinearLayout
            android:id="@+id/ll_ad_banner_dots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="120dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal"/>


    </RelativeLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_category"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/padding_m">

    </android.support.v4.view.ViewPager>


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_ad"
        android:layout_width="match_parent"
        android:layout_height="120dp"/>


    <include
        android:id="@+id/view_home_keyword"
        layout="@layout/view_home_keyword"/>

</LinearLayout>