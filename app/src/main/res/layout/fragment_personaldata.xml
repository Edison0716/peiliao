<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTextWhite"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorMain">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="基础信息"
            android:textColor="@color/colorTextWhite"
            android:textSize="18sp"/>


        <ImageButton
            android:id="@+id/ic_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"

            android:background="#00000000"
            android:src="@drawable/icon_common_back1"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/rl_Avatar"
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/MyItemStyle"
                    android:text="头像"/>
                <ImageView
                    android:id="@+id/iv_headImage"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_order_head"
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dip"
                    android:layout_gravity="right" />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:background="@color/colorTextWhite"
                android:id="@+id/rl_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/MyItemStyle"
                    android:text="昵称："/>
                <TextView
                    android:id="@+id/tv_userName"
                    style="@style/textStyle"
                    android:text=""
                    />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:background="@color/colorTextWhite"
                android:id="@+id/rl_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/MyItemStyle"
                    android:text="性别："/>
                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/textStyle"
                    android:text=""
                    />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:background="@color/colorTextWhite"
                android:id="@+id/rl_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/MyItemStyle"
                    android:text="城市："/>
                <TextView
                    android:id="@+id/tv_city"
                    style="@style/textStyle"
                    android:text=""
                    />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:id="@+id/rl_constellation"
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/MyItemStyle"
                    android:text="星座："/>
                <TextView
                    android:id="@+id/tv_constellation"
                    style="@style/textStyle"
                    android:text=""
                    />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:id="@+id/applyforRank"
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/MyItemStyle"
                    android:text="申请头衔认证"/>
                <TextView
                    android:id="@+id/tv_identify"
                    style="@style/textStyle"
                    android:text=""
                    />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:background="#f1f1f1"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:layout_centerVertical="true"
                    style="@style/MyItemStyle"
                    android:text="账号信息："/>
                <TextView
                    android:id="@+id/tv_userNumInfo"
                    style="@style/textStyle"
                    android:textColor="@color/colorBlack"
                    android:text=""
                    />

            </RelativeLayout>
            <View
                android:layout_marginTop="0dp"
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:id="@+id/rl_phoneNumber"
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    style="@style/MyItemStyle"
                    android:text="注册手机号："/>
                <TextView
                    android:id="@+id/tv_phNum"
                    style="@style/textStyle"
                    android:text=""
                    />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:id="@+id/rl_workNum"
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    style="@style/MyItemStyle"
                    android:text="工作号码："/>
                <TextView
                    android:id="@+id/tv_workNum"
                    style="@style/textStyle"
                    android:text=""
                    />
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>

           <RelativeLayout
               android:layout_marginTop="15dp"
               android:background="#f1f1f1"
               android:layout_height="50dp"
               android:layout_width="match_parent">
               <TextView
                   android:textSize="10dp"
                   style="@style/textStyle1"
                   android:text="(为方便用户之间联系，工作好吗默认为注册手机号码，可设置为其他的手机号码)"/>
           </RelativeLayout>
            <RelativeLayout

                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_grzl_weixin"
                    />
                <TextView
                    android:layout_marginLeft="50dp"
                    style="@style/MyItemStyle"
                    android:text="微信绑定"/>
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_grzl_weibo"
                    />
                <TextView
                    android:layout_marginLeft="50dp"
                    style="@style/MyItemStyle"
                    android:text="微博绑定"/>
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
            <RelativeLayout
                android:background="@color/colorTextWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/icon_grzl_qq"
                    />
                <TextView
                    android:layout_marginLeft="50dp"
                    style="@style/MyItemStyle"
                    android:text="QQ绑定"/>
                <ImageButton
                    style="@style/MyIconLoadMore"
                    />
            </RelativeLayout>
            <View
                style="@style/PartingLine"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
